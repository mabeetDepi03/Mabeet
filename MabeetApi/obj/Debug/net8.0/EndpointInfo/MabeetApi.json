        "required": [
          "checkIN",
          "checkOUT",
          "userId"
        ],
        "type": "object",
        "properties": {
          "checkIN": {
            "type": "string",
            "format": "date-time"
          },
          "checkOUT": {
            "type": "string",
            "format": "date-time"
          },
          "localLodingID": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "hotelRoomID": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "bedID": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "userId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoginViewModel": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      },
      "RegisterViewModel": {
        "required": [
          "confirmPassword",
          "email",
          "firstName",
          "lastName",
          "nationalID",
          "password",
          "phoneNumber"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "nationalID": {
            "maxLength": 14,
            "minLength": 14,
            "type": "string"
          },
          "phoneNumber": {
            "minLength": 1,
            "type": "string",
            "format": "tel"
          },
          "password": {
            "maxLength": 20,
            "minLength": 8,
            "type": "string",
            "format": "password"
          },
          "confirmPassword": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          },
